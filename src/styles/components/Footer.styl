footer
  background-color: $color2
  color: white
  padding 1rem 0

  .details
    grid-column: 1/3

    small
      color: $gray3

  .social
    color: $gray3
    grid-column: 7/9

    &__icons
      display: flex;
      justify-content: flex-end;
      margin-bottom: 1rem;

      svg
        margin-left: 1rem

    &__subscribe
      display: flex

      input
       width: 60%
       padding: .5rem;
       outline: none

      button
        width: 40%
        padding: .5rem;
        border: 1px solid $color1
        background-color: $color1
        color: white
        font-family: $font2

  .categories
    font-family: $font2
    text-transform: uppercase

    &--mobile
      font-family: $font2
      text-transform: uppercase
      display: none

.grid--footer
  display: grid
  grid-template-columns: repeat(8, 1fr)