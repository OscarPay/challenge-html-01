@import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Oswald:wght@400;700&display=swap');

$font1 = "Lato", sans-serif
$font2 = "Oswald", sans-serif

$gray1 = #d2d2d2
$gray2 = #f9fafc
$gray3 = #5f5f64

$color1 = #ea5058
$color2 = #1e1f24

body
  font-family: $font1
  margin: 0
  font-size: 16px
  background-color: $gray2

.container {
  width: 100%
  max-width: 1024px
  margin: 0 auto
}

header {
  box-shadow: 0 1px $gray1;
  background-color: white
}

.logo
  font-weight: bold
  font-size: 1.5rem
  margin: 0

  span
    color: $color1
    font-size: 2.5rem

.header
  display: flex
  justify-content: space-between
  align-items: baseline
  height: 50px
  padding: 1rem 0

  &__right
    display: flex
    width: 100%
    align-items: baseline

  &__nav
    ul
      display: flex
      list-style: none
      margin: 0
      li
        margin-right: 1rem
        font-family: $font2
        text-transform: uppercase
        color: $gray1

.products
  margin 2rem 0

.grid-3
  display: grid
  grid-template-columns: repeat(3, 1fr)
  grid-gap: 2rem

  .level-1 {
    grid-row-end: span 3
  }

  .level-2 {
    grid-row-end: span 4
  }

.card
  &__img-container
    position: relative
    img
      object-fit: cover
      width: 100%
      height: 300px

  &__img-container--little
    position: relative
    img
      object-fit: cover
      width: 100%
      height: 200px

  &__img-label
    position: absolute;
    left: -5px;
    bottom: 1.5rem;
    background-color: red;
    padding: .5rem 1.5rem;
    font-family: $font2
    text-transform: uppercase;
    color: white;

  &__title
    margin .5rem 0

  &__description
    color: $gray3
    margin .25rem 0

footer
  background-color: $color2
  color: white
  padding 1rem 0

  .details
    grid-column: 1/3

    small
      color: $gray3

  .social
    color: $gray3
    grid-column: 7/9

    &__icons
      display: flex;
      justify-content: flex-end;
      margin-bottom: 1rem;

      svg
        margin-left: 1rem

    &__subscribe
      display: flex

      input
       width: 60%

      button
        width: 40%
        padding: .5rem;
        border: 1px solid $color1
        background-color: $color1
        color: white
        font-family: $font2

  .categories
    font-family: $font2
    text-transform: uppercase

.grid--footer
  display: grid
  grid-template-columns: repeat(8, 1fr)

