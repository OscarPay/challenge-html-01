header {
  box-shadow: 0 1px $gray1;
  background-color: white
}

.header
  display: flex
  justify-content: space-between
  align-items: baseline
  height: 50px
  padding: 1rem 0

  &__right
    display: flex
    width: 100%
    align-items: baseline

  &__nav
    ul
      display: flex
      list-style: none
      margin: 0
      li
        margin-right: 1rem
        font-family: $font2
        text-transform: uppercase
        color: $gray1