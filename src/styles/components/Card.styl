.card
  &__img-container
    position: relative
    img
      object-fit: cover
      width: 100%
      height: 300px

  &__img-container--little
    position: relative
    img
      object-fit: cover
      width: 100%
      height: 200px

  &__img-label
    position: absolute;
    left: -5px;
    bottom: 1.5rem;
    background-color: red;
    padding: .5rem 1.5rem;
    font-family: $font2
    text-transform: uppercase;
    color: white;

  &__title
    margin .5rem 0

  &__description
    color: $gray3
    margin .25rem 0